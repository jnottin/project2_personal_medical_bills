<body>
    <!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <i class="fas fa-cog"></i>Trail To The Best!</h1>
                </div>
            </div>
        </div>
    </header>

    <!-- ACTIONS -->
    <section id="actions" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <a href="movie/new" class="btn btn-success btn-block">
                        Add New Movie Trailer
                    </a>
                </div>
            </div>
        </div>
    </section>

    {{movies}}

    <!-- MOVIE TRAILERS -->
    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <h4>Movie Trailers</h4>
                        </div>
                        <table class="table table-striped">
                            <thead class="thead-dark">
                                <tr>
                                    {{!-- <th>#</th> --}}
                                    <th>Title</th>
                                    <th>Director</th>
                                    <th>Release Date</th>
                                    <th>Rating</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            {{#each movies}}
                            <tbody>
                                <tr>
                                    {{!-- <td>1</td> --}}
                                    <td>{{title}}</td>
                                    <td>{{director}}</td>
                                    <td>{{releaseDate}}</td>
                                    {{#if ratings.length}}
                                    {{#each ratings}}
                                    <td>{{content}}</td>
                                    {{/each}}
                                    {{else}}
                                    <td>Not Rated</td>
                                    {{/if}}
                                    <td>
                                        <a href="movie/{{this.id}}" class="btn btn-secondary">
                                            <i class="fas fa-angle-double-right"></i> Details
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-block" href="/movie/delete/{{this.id}}">Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

